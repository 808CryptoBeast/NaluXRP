{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "script"
  },
  "extends": "eslint:recommended",
  "globals": {
    "Chart": "readonly",
    "renderDashboard": "readonly",
    "renderExplorer": "readonly",
    "renderInspector": "readonly",
    "NaluDashboard": "readonly",
    "showNotification": "readonly",
    "setXRPLNetwork": "readonly"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-undef": "warn"
  }
}